<!DOCTYPE html>
<html>
    <head>
        <title>Counter</title>
    </head>
    <body>
        <h1>Count: <%=count %></h1>
        <button onclick="changeNum(+1)">+</button>
        <button onclick="changeNum(-1)">-</button>
        <script>
            function changeNum(num){
                fetch('/count', {method : "POST",
                    body: JSON.stringify({"value":num}),
                    headers: {'content-type' : 'application/json'}})
                    .then(() => {location.reload()
                })
            }
        </script>
    </body>
</html>